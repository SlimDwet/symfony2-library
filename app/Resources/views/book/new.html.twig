{% extends 'base.html.twig' %}

{% block body %}
    <div class="authors">
        {{ form_start(form) }}
        {{ form_row(form.title) }}
        {{ form_row(form.nbCopies) }}

        <h3>Auteurs</h3>
        <div class="book_authors" data-prototype="{{ form_widget(form.authors.vars.prototype)|e }}">
            {% for author in form.authors %}
                <div class="form-group">
                    {{ form_row(author.firstname) }}
                    {{ form_row(author.lastname) }}
                    {{ form_row(author.nickname) }}
                </div>
            {% endfor %}
        </div>
        {{ form_widget(form.save, {'attr': {'class': 'btn btn-default'}, 'label': 'Ajouter'}) }}
        {{ form_end(form) }}
    </div>
{% endblock %}

{% block javascripts %}
    {% javascripts '@TutoLibraryBundle/Resources/public/js/book.js' %}
    <script src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}