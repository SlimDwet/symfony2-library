{% extends 'base.html.twig' %}

{% block body %}
    <h1 class="page-header">Ajout d'un livre</h1>
    <br>
    <p>
        <a href="{{ path('book_index') }}" class="btn btn-default">Liste des livres</a>
    </p>
    <br>
    {{ form_start(form, {'attr': { 'class': 'form-horizontal' }}) }}

    <div class="form-group">
        {{ form_label(form.title, 'Titre', {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
        <div class="col-sm-4">
            {{ form_row(form.title, {'attr': {'class': 'form-control'}, 'label': false}) }}
        </div>
        {{ form_errors(form.title) }}
    </div>

    <div class="form-group">
        {{ form_label(form.nbCopies, 'Nombre de copies', {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
        <div class="col-sm-4">
            {{ form_row(form.nbCopies, {'attr': {'class': 'form-control'}, 'label': false}) }}
        </div>
        {{ form_errors(form.nbCopies) }}
    </div>

    <div class="form-group">
        {{ form_label(form.authors) }}
        <div class="col-sm-4">
            {{ form_row(form.authors, {'attr': {'class': 'form-control'}, 'label': false}) }}
        </div>
        {{ form_errors(form.authors) }}
    </div>

    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-4">
            <input type="submit" value="Ajouter" class="btn btn-default" />
        </div>
    </div>
    {{ form_end(form) }}

{% endblock %}
