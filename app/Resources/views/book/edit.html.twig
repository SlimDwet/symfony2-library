{% extends 'base.html.twig' %}

{% block body %}
    <h1 class="page-header">Edition d'un livre</h1>

    <div>
        <a href="{{ path('author_index') }}" class="btn btn-primary">Liste des livres</a>
        {{ form_start(delete_form, { 'attr': { 'style': 'display: inline' } }) }}
        <input type="submit" value="Supprimer" class="btn btn-danger">
        {{ form_end(delete_form) }}
    </div>
    <br>

    {{ form_start(edit_form, {'attr': { 'class': 'form-horizontal' }}) }}

    <div class="form-group">
        {{ form_label(edit_form.title, 'Titre', {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
        <div class="col-sm-4">
            {{ form_row(edit_form.title, {'attr': {'class': 'form-control'}, 'label': false}) }}
        </div>
        {{ form_errors(edit_form.title) }}
    </div>

    <div class="form-group">
        {{ form_label(edit_form.nb_copies, 'Nombre de copies', {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
        <div class="col-sm-4">
            {{ form_row(edit_form.nb_copies, {'attr': {'class': 'form-control'}, 'label': false}) }}
        </div>
        {{ form_errors(edit_form.nb_copies) }}
    </div>

    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-4">
            <input type="submit" value="Modifier" class="btn btn-default" />
        </div>
    </div>
    {{ form_end(edit_form) }}

{% endblock %}
