{% extends 'base.html.twig' %}

{% block javascripts %}
    {% javascripts '@TutoLibraryBundle/Resources/public/js/book.js' %}
        <script src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}

{% block body %}
    <h1 class="page-header">Edition d'un livre</h1>

    <div>
        <a href="{{ path('book_index') }}" class="btn btn-primary">Liste des livres</a>
        {{ form_start(delete_form, { 'attr': { 'style': 'display: inline' } }) }}
        <input type="submit" value="Supprimer" class="btn btn-danger">
        {{ form_end(delete_form) }}
    </div>
    <br>

    {{ form_start(edit_form, {'attr': { 'class': 'form-horizontal' }}) }}

    <div class="form-group">
        {{ form_label(edit_form.title, 'Titre') }}
        <div class="col-sm-4">
            {{ form_row(edit_form.title, {'attr': {'class': 'form-control'}, 'label': false}) }}
        </div>
        {{ form_errors(edit_form.title) }}
    </div>

    <div class="form-group">
        {{ form_label(edit_form.nbCopies) }}
        <div class="col-sm-4">
            {{ form_row(edit_form.nbCopies, {'attr': {'class': 'form-control'}, 'label': false}) }}
        </div>
        {{ form_errors(edit_form.nbCopies) }}
    </div>

    <div class="form-group">
        {{ form_label(edit_form.authors) }}
        <div class="col-sm-4">
            {{ form_row(edit_form.authors, {'attr': {'class': 'form-control'}, 'label': false}) }}
        </div>
        {{ form_errors(edit_form.authors) }}
    </div>

    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-4">
            <input type="submit" value="Modifier" class="btn btn-default" />
        </div>
    </div>
    {{ form_end(edit_form) }}

{% endblock %}
